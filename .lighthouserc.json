{
  "ci": {
    "collect": {
      "startServerCommand": "",
      "url": [
        "http://127.0.0.1:4173/",
        "http://127.0.0.1:4173/cours/",
        "http://127.0.0.1:4173/fiches-memo/",
        "http://127.0.0.1:4173/fiches-eleves/"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.85}],
        "categories:accessibility": ["error", {"minScore": 0.95}],
        "categories:best-practices": ["warn", {"minScore": 0.9}],
        "categories:seo": ["warn", {"minScore": 0.9}],
        "total-byte-weight": ["error", {"maxNumericValue": 550000}],
        "script-treemap-data": "off"
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./.lhci_reports"
    }
  }
}
